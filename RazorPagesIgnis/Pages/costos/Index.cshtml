@model RazorPagesIgnis.Pages.costos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Costo[0].HoraJornada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo[0].CostoHoraBasico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo[0].CostoHoraAvanzado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo[0].PrimeraHoraBasico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo[0].PrimeraHoraAvanzado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo[0].JornadaBasico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo[0].JornadaAvanzado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Costo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoraJornada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostoHoraBasico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostoHoraAvanzado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimeraHoraBasico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimeraHoraAvanzado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JornadaBasico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JornadaAvanzado)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
