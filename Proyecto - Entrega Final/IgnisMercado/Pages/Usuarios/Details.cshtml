@page
@model IgnisMercado.Pages.Usuarios.DetailsModel

@using IgnisMercado.Areas.Identity.Data
@using IgnisMercado.Models
@using IgnisMercado.Models.ClienteViewModels

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Datos Personales";
}

<h1>Datos Personales</h1>

<div>
    <h4>Para modificar información debe ingresar en la página Editar.</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Nombre de Usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.UserName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.DOB)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.DOB)
        </dd>

        <dt class="col-sm-2">
            Correo Electrónico
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Email)
        </dd>

        <dt class="col-sm-2">
            Número Telefónico
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.PhoneNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Role)
        </dd>

        @if (User.IsInRole("Administrador")) 
        {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Status)
        </dd>
    	}

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ApplicationUser.Id"  class="btn btn-primary">Guardar Cambios</a> |
    <a asp-page="./Index">Volver a la lista</a>
</div>
