@page
@model IgnisMercado.Pages.Usuarios.DeleteModel

@{
    ViewData["Title"] = "Eliminar usuario";
}

<h1>Eliminar</h1>

<h3>Está seguro que desea eliminar definitivamente al usuario?</h3>
<div>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            Nombre de Usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.UserName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Name)
        </dd>

        <dt class="col-sm-2">
            Correo Electrónico
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Email)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Role)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Status)
        </dd>

    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ApplicationUser.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a la lista</a>
    </form>
</div>
