                @Html.DisplayFor(modelItem => item.RolRequerido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorasContratadas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NivelExperiencia)
            </td>
