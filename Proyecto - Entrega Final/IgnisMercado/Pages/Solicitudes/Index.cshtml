                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costoSolicitud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
