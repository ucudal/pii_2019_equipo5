@page
@model IgnisMercado.Pages.Solicitudes.IndexModel

@if (User.IsInRole("Administrador"))
{
    ViewData["Title"] = "Solicitudes";

<h1>Solicitudes</h1>
}

@if (User.IsInRole("Cliente") || User.IsInRole("Técnico")) 
{
    ViewData["Title"] = "Mis Solicitudes";

<h1>Mis Solicitudes</h1>
}

@if (User.IsInRole("Administrador") || User.IsInRole("Cliente")) 
{
<p>
    <a asp-page="Create">Crear nuevo</a>
</p>
}

<table class="table">
    <thead>
        <tr>

        @if (User.IsInRole("Administrador"))
        {
            <th>
                @Html.DisplayNameFor(model => model.Solicitud[0].RolRequerido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solicitud[0].NivelExperiencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solicitud[0].ModoDeContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solicitud[0].HorasContratadas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solicitud[0].costoSolicitud)
            </th>
        }

        @if (User.IsInRole("Cliente") || User.IsInRole("Técnico"))
        {
            <th>
                @Html.DisplayNameFor(model => model.Solicitud[0].RolRequerido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solicitud[0].NivelExperiencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solicitud[0].ModoDeContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solicitud[0].HorasContratadas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Solicitud[0].costoSolicitud)
            </th>
        }
            <th></th>
        </tr>
    </thead>

    <tbody>
@foreach (var item in Model.Solicitud) 
{
        <tr>
        @if (User.IsInRole("Administrador"))
        {
            <td>
                @Html.DisplayFor(modelItem => item.RolRequerido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NivelExperiencia)
            </td>

            @if ((item.ModoDeContrato) == 1)
            {
                <td>Jornada</td>
            }
            else
            {
                <td>Hora</td>
            }

            <td>
                @Html.DisplayFor(modelItem => item.HorasContratadas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costoSolicitud)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SolicitudId">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.SolicitudId">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.SolicitudId">Eliminar</a>
            </td>
        }

        @if (User.IsInRole("Cliente") || User.IsInRole("Técnico"))
        {
            <td>
                @Html.DisplayFor(modelItem => item.RolRequerido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NivelExperiencia)
            </td>

            @if ((item.ModoDeContrato) == 1)
            {
                <td>Jornada</td>
            }
            else
            {
                <td>Hora</td>
            }

            <td>
                @Html.DisplayFor(modelItem => item.HorasContratadas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costoSolicitud)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SolicitudId">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.SolicitudId">Detalles</a>
            </td>
        }
        </tr>
}
    </tbody>
</table>
