@model IgnisMercado.Pages.Costos.IndexModel

@using IgnisMercado.Areas.Identity.Data
@using IgnisMercado.Models
@using IgnisMercado.Models.ViewModels

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Lista de Precios";
}

<h1>Lista de Precios</h1>
<hr>   
<br>

<h4>Precios para Nivel BÃ¡sico</h4>

<table class="table2">
<hr>            

    <thead>
        <tr>
            <th>
                Primera Hora |  
            </th>

            <th>
                Hora Adicional | 
            </th>

            <th>
                Jornada
            </th>

            <th></th>
        </tr>
    </thead>

    <tbody>
    @foreach (var item in Model.Costos) 
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrimeraHoraBasico)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CostoHoraBasico)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.JornadaBasico)
            </td>

            <td></td>
        </tr>

        @if (User.IsInRole("Administrador")) 
        {
            <tr>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
<br>
