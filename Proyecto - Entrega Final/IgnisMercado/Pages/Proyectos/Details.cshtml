@page
@model IgnisMercado.Pages.Proyectos.DetailsModel

@using IgnisMercado.Areas.Identity.Data
@using IgnisMercado.Models
@using IgnisMercado.Models.ClienteViewModels

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Proyecto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Proyecto.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proyecto.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Proyecto.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proyecto.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Proyecto.Status)
        </dt>
    
        @if (User.IsInRole("Administrador")) 
        {
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proyecto.Status)
        </dd>
        }

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Proyecto.ProyectoId" class="btn btn-primary">Editar</a> |
    <a asp-page="./Index">Volver a la lista</a>
</div>
