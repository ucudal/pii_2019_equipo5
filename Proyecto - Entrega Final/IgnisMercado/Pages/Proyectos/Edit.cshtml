@page
@model IgnisMercado.Pages.Proyectos.EditModel

@using Microsoft.AspNetCore.Identity
@using IgnisMercado.Areas.Identity.Data
@using IgnisMercado.Models
@using IgnisMercado.Models.ClienteViewModels

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Proyecto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Proyecto.ProyectoId" />
            <div class="form-group">
                <label asp-for="Proyecto.Nombre" class="control-label"></label>
                <input asp-for="Proyecto.Nombre" class="form-control" />
                <span asp-validation-for="Proyecto.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proyecto.Descripcion" class="control-label"></label>
                <input asp-for="Proyecto.Descripcion" class="form-control" />
                <span asp-validation-for="Proyecto.Descripcion" class="text-danger"></span>
            </div>
        
        @if (User.IsInRole("Administrador")) 
        {
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Proyecto.Status" /> @Html.DisplayNameFor(model => model.Proyecto.Status)
                </label>
            </div>
        }
        
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volvar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
